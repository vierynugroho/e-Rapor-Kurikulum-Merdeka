{
    "extends": ["next/core-web-vitals", "next/typescript"],
    "rules": {
        "@typescript-eslint/no-unused-vars": "error",
        "@typescript-eslint/no-unused-expressions": "off"
    },
    "overrides": [
        {
            "files": ["*.css"],
            "parser": "postcss"
        }
    ],
    "ignorePatterns": ["**/*.css", "**/*.scss"]
}
